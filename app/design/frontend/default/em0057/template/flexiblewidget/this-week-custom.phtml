	});

	var timeout = null;
	function hideDetail(element) {
		if (timeout)
			clearTimeout(timeout);
		timeout = setTimeout(function() {
			timeout = null;
			element.slideUp();
		}, 100);
	}

	function showDetail(element) {
		if (timeout)
			clearTimeout(timeout);
		timeout = setTimeout(function() {
			timeout = null;
			element.slideDown();
		}, 100);
	}
}); 
