<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="box-collateral box-up-sell" id="slideshow_upsell">
    <div class="box-title">
        <h2><?php echo $this->__('You may also be interested in') ?></h2>
    </div>
    <ul class="products-grid" id="upsell-product-list">
    <?php $this->resetItemsIterator() ?>
    <?php for($_i=0;$_i<$this->getRowCount();$_i++): ?>
        <?php for($_j=1;$_j<=$this->getColumnCount();$_j++): ?>
            <?php if($_link=$this->getIterableItem()): ?>
			<?php if($_j%2==1):?>
				<li class="item">
			<?php endif;?>
					<div>
						<a href="<?php echo $_link->getProductUrl() ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')?>" alt="<?php echo $this->escapeHtml($_link->getName()) ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>" /></a>
						<h3 class="product-name"><a href="<?php echo $_link->getProductUrl() ?>"><?php echo $this->escapeHtml($_link->getName()) ?></a></h3>
						<?php echo $this->getPriceHtml($_link, true, '-upsell') ?>
					
						<div class="actions">
							<?php if ($_link->isSaleable()): ?>
								<button type="button" title="<?php echo $this->__('Add To Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_link) ?>')"><div><span><?php echo $this->__('Add To Cart');?></span></div></button>
							<?php else: ?>
								<p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
							<?php endif; ?>
							<ul class="add-to-links">
								<li><span class="separator">+</span><a href="<?php echo $this->helper('catalog/product')->getEmailToFriendUrl($_link) ?>" class="i-send-friend"><i></i><?php echo $this->__('Email to Friend') ?></a></li>
								<?php if ($this->helper('wishlist')->isAllow()) : ?>
									
									<li><span class="separator">+</span><a href="<?php echo $this->helper('wishlist')->getAddUrl($_link) ?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist');?></a></li>
								<?php endif; ?>
								
							</ul>
						</div>
					</div>
				<?php if($_j %2 ==0||$_j==$this->getColumnCount()):?>		
					</li>
				<?php endif;?>
            <?php endif; ?>
        <?php endfor; ?>
    <?php endfor; ?>
    </ul>
</div>
<?php endif ?>
