<layout version="0.1.0">
<!--
Default layout, loads most of the pages
-->

    <default>
        <reference name="footer">
            <block type="cms/block" name="cms_footer_links" before="footer_links">
                <!--
                    The content of this block is taken from the database by its block_id.
                    You can manage it in admin CMS -> Static Blocks
                -->
                <action method="setBlockId"><block_id>footer_links</block_id></action>
            </block>
		<block type="cms/block" name="footer_account_mobile" >                
                <action method="setBlockId"><block_id>footer_account_mobile</block_id></action>
            </block>
			<block type="cms/block" name="footer_store_links_mobile" >                
                <action method="setBlockId"><block_id>footer_store_links_mobile</block_id></action>
            </block>
			<block type="cms/block" name="footer_about_store_mobile" >                
                <action method="setBlockId"><block_id>footer_about_store_mobile</block_id></action>
            </block>
        </reference>
    </default>
    
    <cms_page translate="label">
        <label>CMS Pages (All)</label>
        <reference name="content">
            <block type="core/template" name="page_content_heading" template="cms/content_heading.phtml"/>
            <block type="page/html_wrapper" name="cms.wrapper" translate="label">
                <label>CMS Content Wrapper</label>
                <action method="setElementClass"><value>std</value></action>
                <block type="cms/page" name="cms_page"/>
            </block>
        </reference>
    </cms_page>

    <cms_index_index translate="label">
        <label>CMS Home Page</label>
        <reference name="root">
            <block type="page/html_wrapper" name="homepage.banner" translate="label">
                <label>Home Page Banner(Mobile)</label>
                <action method="setElementClass"><value>front-banner</value></action>
            </block>
        </reference>
		<reference name="header">
			<block type="core/template" name="main_slideshow" template="cms/main_slideshow.phtml">
				<block type="cms/block" name="main_slideshow_mobile"> 
					<action method="setBlockId"><block_id>main_slideshow_mobile</block_id></action>
				</block>
			</block>
			<block type="catalog/navigation" name="hp_nav" before="-" template="catalog/navigation/top.phtml" />
		</reference>
        <reference name="content">
			<block type="cms/block" name="home_banners_mobile"> 
				<action method="setBlockId"><block_id>home_banners_mobile</block_id></action>
			</block>
			<block type="cms/block" name="home_three_banners_mobile "> 
				<action method="setBlockId"><block_id>home_three_banners_mobile </block_id></action>
			</block>
			<block type="mobiletheme/featuredproducts" name="mobiletheme_featuredproducts" template="mobiletheme/em_featured_mobile.phtml" />
			
        </reference>
        <remove name="cms.wrapper"/>
    </cms_index_index>

    <cms_index_defaultindex>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="catalog/navigation" name="hp_nav" template="catalog/navigation/top.phtml" />
            <block type="core/template" name="default_home_page" template="cms/default/home.phtml"/>
        </reference>
    </cms_index_defaultindex>

    <cms_index_noroute translate="label">
        <label>CMS No-Route Page</label>
    </cms_index_noroute>

    <cms_index_defaultnoroute>
        <remove name="right"/>
        <remove name="left"/>
        
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="catalog/navigation" name="hp_nav" template="catalog/navigation/top.phtml" />
            <block type="core/template" name="default_no_route" template="cms/default/no-route.phtml"/>
        </reference>
    </cms_index_defaultnoroute>

</layout>
