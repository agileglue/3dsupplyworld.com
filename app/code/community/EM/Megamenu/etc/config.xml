<config>
    <modules>
        <EM_Megamenu>
            <version>0.0.1</version>
        </EM_Megamenu>
    </modules>
     <frontend>
        <routers>
            <megamenu>
                <use>standard</use>
                <args>
                    <module>EM_Megamenu</module>
                    <frontName>megamenu</frontName>
                </args>
            </megamenu>
        </routers>
        <layout>
            <updates>
                <megamenu>
                    <file>em_megamenu.xml</file>
                </megamenu>
            </updates>
        </layout>
    </frontend>
     <admin>
        <routers>
            <megamenu>
                <use>admin</use>
                <args>
                    <module>EM_Megamenu</module>
                    <frontName>megamenu</frontName>
                </args>
            </megamenu>
        </routers>
    </admin>
   
    <global>
        <models>
            <megamenu>
                <class>EM_Megamenu_Model</class>
            </megamenu>
        </models>
        <blocks>
            <megamenu>
                <class>EM_Megamenu_Block</class>
            </megamenu>
        </blocks>
        <helpers>
            <megamenu>
                <class>EM_Megamenu_Helper</class>
            </megamenu>
        </helpers>
    </global>
</config>