<?xml version="1.0"?>
<config>
    <modules>
        <EM_Ajaxcart>
            <version>0.1.0</version>
        </EM_Ajaxcart>
    </modules>
    <frontend>
        <routers>
            <ajaxcart>
                <use>standard</use>
                <args>
                    <module>EM_Ajaxcart</module>
                    <frontName>ajaxcart</frontName>
                </args>
            </ajaxcart>
        </routers>
        <layout>
            <updates>
                <ajaxcart>
                    <file>em_ajaxcart.xml</file>
                </ajaxcart>
            </updates>
        </layout>
    </frontend>
    
    <adminhtml>		
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<EM_Ajaxcart>
							<title>Ajaxcart Module</title>
							<sort_order>10</sort_order>
						</EM_Ajaxcart>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<ajaxcart>
					<file>ajaxcart.xml</file>
				</ajaxcart>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <ajaxcart>
                <class>EM_Ajaxcart_Model</class>
                <resourceModel>ajaxcart_mysql4</resourceModel>
            </ajaxcart>
            <ajaxcart_mysql4>
                <class>EM_Ajaxcart_Model_Mysql4</class>
                <entities>
                    <ajaxcart>
                        <table>ajaxcart</table>
                    </ajaxcart>
                </entities>
            </ajaxcart_mysql4>
        </models>
        <resources>
            <ajaxcart_setup>
                <setup>
                    <module>EM_Ajaxcart</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ajaxcart_setup>
            <ajaxcart_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ajaxcart_write>
            <ajaxcart_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ajaxcart_read>
        </resources>
        <blocks>
            <ajaxcart>
                <class>EM_Ajaxcart_Block</class>
            </ajaxcart>
        </blocks>
        <helpers>
            <ajaxcart>
                <class>EM_Ajaxcart_Helper</class>
            </ajaxcart>
        </helpers>
    </global>
</config>